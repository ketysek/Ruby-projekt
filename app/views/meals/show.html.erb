<%= render 'admin/nav.html.erb' %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>
        Meal: <%= @meal.title %>
      </h1>

      <p>
        <strong>Type:</strong>
        <% if @meal.kind == 'main' %>
          main dish
        <% else %>
          <%= @meal.kind %>
        <% end %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @meal.price %>
      </p>

      <p>
        <strong>Allergens:</strong>
        <%= @meal.alergens.map(&:name).join(', ') %>
      </p>

      <%= link_to 'Back', meals_path, :class => 'btn btn-warning' %>
    </div>
  </div>
</div>